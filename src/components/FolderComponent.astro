---
import FolderComponentRecursive from './FolderComponent.astro';

export interface File {
  title: string;
  path: string;
}

export interface FolderNode {
  name: string;
  files: File[];
  children: FolderNode[];
}

const { folder, depth = 0 } = Astro.props;
---

<details class="[&:not(:first-child)]:mt-4" open>
  <summary class="cursor-pointer list-none">
    <div class="flex items-center p-4 bg-gray-50 hover:bg-gray-100 rounded-lg transition-colors">
      <!-- Chevron for rotation -->
      <svg 
        class="w-5 h-5 mr-3 transform transition-transform flex-shrink-0"
        fill="none" stroke="currentColor" viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>

      <!-- Folder icon -->
      <svg 
        class="w-6 h-6 mr-3 text-blue-600 flex-shrink-0"
        fill="none" stroke="currentColor" viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
      </svg>

      <!-- Folder name -->
      <span class="font-semibold text-lg text-gray-900">{folder.name}</span>

      <!-- File count -->
      <span class="ml-auto text-sm text-gray-500">
        {folder.files.length} {folder.files.length === 1 ? 'page' : 'pages'}
      </span>
    </div>
  </summary>

  <div class="mt-2 ml-6 pl-6 border-l border-gray-200">
    <!-- Files -->
    <div class="space-y-2">
      {folder.files.map((file: File) => (
        <a
          href={file.path.endsWith('/') ? file.path : `${file.path}/`}
          class="group flex items-center p-3 pl-6 rounded-lg transition-colors hover:bg-blue-50"
        >
          <svg
            class="w-5 h-5 mr-3 text-gray-400 group-hover:text-blue-600 flex-shrink-0"
            fill="none" stroke="currentColor" viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span class="text-gray-700 group-hover:text-blue-600 font-medium">{file.title}</span>
        </a>
      ))}
    </div>

    <!-- Subfolders recursively -->
    <div class="space-y-4">
      {folder.children.map((child: FolderNode) => (
        <FolderComponentRecursive folder={child} depth={depth + 1} />
      ))}
    </div>
  </div>
</details>

<style>
/* Chevron rotation when details is open */
details[open] > summary svg:first-child {
  transform: rotate(90deg);
}
</style>
