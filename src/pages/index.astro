---
import Layout from '../layouts/Layout.astro';
import FolderComponent from '../components/FolderComponent.astro';
import ThemeSettings from '../components/ThemeSettings.astro';
import { getAllDocs, buildFolderTree } from '../utils/docs';

const docs = await getAllDocs();
const tree = buildFolderTree(docs);
---

<Layout title="Documentation Home">
  <ThemeSettings />
  <div class="min-h-screen themed-bg-gradient">
    <div class="container mx-auto px-4 py-16">
      <header class="text-center mb-16">
        <h1 class="text-6xl font-bold themed-text-primary mb-4">
          Documentation
        </h1>
        <p class="text-xl themed-text-secondary max-w-2xl mx-auto">
          Browse through your Obsidian vault structure
        </p>
      </header>

      <div class="max-w-5xl mx-auto">
        <div class="themed-card rounded-2xl themed-shadow-xl p-8">
          <h2 class="text-3xl font-bold mb-6 themed-text-primary">Browse Documentation</h2>
          
          {docs.length === 0 ? (
            <div class="text-center py-12">
              <svg class="w-16 h-16 mx-auto themed-icon-secondary mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <p class="themed-text-secondary text-lg">No documentation pages found.</p>
              <p class="themed-text-tertiary mt-2">Add markdown files to <code class="themed-code-inline px-2 py-1 rounded">src/content/docs/</code></p>
            </div>
          ) : (
            <div class="space-y-6">
              {/* Root Files */}
              {tree.files.length > 0 && (
                <div class="mb-8">
                  <h3 class="text-xl font-semibold mb-4 themed-text-primary">Root Pages</h3>
                  <div class="space-y-2">
                    {tree.files.map(file => (
                      <a 
                        href={file.path.endsWith('/') ? file.path : `${file.path}/`}
                        class="index-file-link flex items-center p-3 rounded-lg transition-colors"
                      >
                        <svg class="w-5 h-5 mr-3 themed-icon-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <span class="themed-text-primary font-medium">
                          {file.title}
                        </span>
                      </a>
                    ))}
                  </div>
                </div>
              )}

              {/* Folders */}
              {tree.children.length > 0 && (
                <div class="space-y-4">
                  {tree.children.map(folder => (
                    <FolderComponent folder={folder} />
                  ))}
                </div>
              )}
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  .themed-bg-gradient {
    background: linear-gradient(to bottom right, var(--theme-bgSecondary), var(--theme-bgTertiary));
  }
  
  .themed-card {
    background-color: var(--theme-bgPrimary);
  }
  
  .themed-text-primary {
    color: var(--theme-textPrimary);
  }
  
  .themed-text-secondary {
    color: var(--theme-textSecondary);
  }
  
  .themed-text-tertiary {
    color: var(--theme-textTertiary);
  }
  
  .themed-icon-secondary {
    color: var(--theme-textTertiary);
  }
  
  .themed-shadow-xl {
    box-shadow: 0 20px 25px -5px var(--theme-shadow), 0 10px 10px -5px var(--theme-shadow);
  }
  
  .themed-code-inline {
    background-color: var(--theme-codeInline);
    color: var(--theme-textPrimary);
  }
  
  .index-file-link {
    color: var(--theme-textPrimary);
  }
  
  .index-file-link:hover {
    background-color: var(--theme-bgTertiary);
    color: var(--theme-accentPrimary);
  }
  
  .index-file-link:hover svg {
    color: var(--theme-accentPrimary);
  }
</style>
